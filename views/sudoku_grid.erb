<!-- This part created the grid for the sudoku -->
<!-- one div for each row-->
<% 3.times do |row| %>
	<div class='row'>
	<!-- we want to create separate div elements for boxes to style them using CSS -->
		<% 3.times do |box| %>
			<div class="box">
			<!-- each box will have nine cells -->
				<% 3.times do |cell_row| %>
					<div class="cell-row">
						<% 3.times do |cell| %>
							<%= partial :cell, :locals => {:cell_index => row*27+box*3+cell_row*9+cell} %>
						<% end %> 
						<!-- end of cell -->
					</div>
				<% end %> <!-- end of cell-row -->
			</div>
		<% end %> <!-- end of box -->
	</div>
<% end %> <!-- end of row -->
<!-- End of Sudoku grid -->